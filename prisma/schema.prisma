generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id           String   @id @default(uuid())
  name         String?  @db.VarChar(255)
  email        String   @unique @db.VarChar(255)
  createdAt    DateTime @default(now())
  passwordHash String   @db.VarChar(255)
  updatedAt    DateTime @updatedAt
  planName     String?  @db.VarChar(255)
  plan         Plan?    @relation(fields: [planName], references: [name])
  role         Role     @default(USER) // Define o papel do usuário como USER por padrão

  @@index([email, createdAt]) // Índice composto para consultas frequentes
}

model Plan {
  id    String @id @default(uuid())
  name  String @unique @db.VarChar(255)
  price Float
  users User[]

  @@index([name, price]) // Índice composto para consultas frequentes
}